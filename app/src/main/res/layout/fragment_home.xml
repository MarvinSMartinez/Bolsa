<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/caja"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/letterrocko"
                android:gravity="center"
                android:text="AREAS DE TRABAJO"
                android:textColor="@color/black"
                android:textSize="20dp"/>
        </RelativeLayout>

        <GridLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:columnCount="1"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:padding="14dp">
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardBackgroundColor="@color/azulcaja"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                app:cardElevation="2dp"
                android:layout_gravity="center_horizontal"
                app:contentPadding="11dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="true"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="21dp"
                    android:minHeight="18dp"
                    android:scaleType="fitEnd"
                    android:src="@drawable/ic_construccion" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/letterrocko"
                    android:gravity="center"
                    android:minHeight="12dp"
                    android:padding="1dp"
                    android:layout_margin="1dp"
                    android:text="Construcción"
                    android:textColor="@color/white"
                    android:textStyle="normal">
                </TextView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardBackgroundColor="@color/azulcaja"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_horizontal"
                app:cardElevation="2dp"
                app:contentPadding="11dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="true"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="24dp"
                    android:minHeight="18dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_informatica" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/letterrocko"
                    android:gravity="center"
                    android:minHeight="12dp"
                    android:padding="1dp"
                    android:layout_margin="1dp"
                    android:text="Informática"
                    android:textColor="@color/white"
                    android:textStyle="normal">
                </TextView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardBackgroundColor="@color/azulcaja"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_horizontal"
                app:cardElevation="2dp"
                app:contentPadding="11dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="true"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="7dp"
                    android:minHeight="18dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_salud" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/letterrocko"
                    android:gravity="center"
                    android:minHeight="12dp"
                    android:padding="1dp"
                    android:layout_margin="1dp"
                    android:text="Salud"
                    android:textColor="@color/white"
                    android:textStyle="normal">
                </TextView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardBackgroundColor="@color/azulcaja"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_horizontal"
                app:cardElevation="2dp"
                app:contentPadding="11dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="true"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="9dp"
                    android:minHeight="18dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_finanzas" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/letterrocko"
                    android:gravity="center"
                    android:minHeight="12dp"
                    android:padding="1dp"
                    android:layout_margin="1dp"
                    android:text="Finanzas"
                    android:textColor="@color/white"
                    android:textStyle="normal">
                </TextView>

            </androidx.cardview.widget.CardView>

        </GridLayout>

    </LinearLayout>

</ScrollView>