<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="17dp"
    android:paddingRight="17dp"
    android:background="@color/caja"
    android:orientation="vertical" >

        <TextView android:text="ID"
            android:minHeight="45dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#455A64"
            android:gravity="center_vertical"/>
        <EditText
            android:id="@+id/editIdDetalleExperiencia"
            android:inputType="text"
            android:maxLength="30"
            android:minHeight="48dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"  />

        <TextView android:text="@string/detalle_experiencia_idcandidato"
            android:minHeight="45dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#455A64"
            android:gravity="center_vertical"/>
        <EditText
            android:id="@+id/edit_detalle_experiencia_idcandidato"
            android:inputType="text"
            android:maxLength="30"
            android:minHeight="48dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"  />

        <TextView android:text="@string/detalle_experiencia_lugar_experiencia"
            android:minHeight="45dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#455A64"
            android:gravity="center_vertical"/>
        <EditText
            android:id="@+id/editLugar"
            android:inputType="text"
            android:maxLength="30"
            android:minHeight="48dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"  />

        <TextView android:text="@string/detalle_experiencia_puesto"
            android:minHeight="45dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#455A64"
            android:gravity="center_vertical"/>
        <EditText
            android:id="@+id/editPuesto"
            android:inputType="text"
            android:maxLength="30"
            android:minHeight="48dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView android:text="@string/detalle_experiencia_tiempo"
            android:minHeight="45dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#455A64"
            android:gravity="center_vertical"/>
        <EditText
            android:id="@+id/editTiempo"
            android:inputType="text"
            android:minHeight="48dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"  />

        <TextView
            android:text="@string/opciones"
            android:minHeight="48dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#455A64"
            android:gravity="center_vertical"/>

        <Button
            android:onClick="actualizar"
            android:text="@string/actualizar"
            android:minHeight="48dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <Button
            android:onClick="limpiarTexto"
            android:text="@string/limpiar"
            android:minHeight="48dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

</LinearLayout>