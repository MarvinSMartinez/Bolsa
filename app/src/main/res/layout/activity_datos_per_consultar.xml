<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/caja"
tools:context=".datosPerfil.DatosPerConsultar">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">
<TextView
    android:id="@+id/textTitulo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:gravity="center"
    android:text="CONSULTAR DATOS DEL PERFIL"
    android:textColor="@color/black"
    android:textSize="17dp"
    app:layout_constraintTop_toTopOf="parent"
    tools:layout_editor_absoluteX="0dp" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Nombre : "
    android:textColor="@color/black"
    android:padding="5dp"
    android:layout_marginTop="15dp"
    android:textSize="15dp"
    />
<EditText
    android:id="@+id/anombre"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ems="10"
    android:hint="Ingrese su nombre"
    android:minHeight="48dp"
    android:padding="15dp"
    android:textColorHint="#757575"
    tools:ignore="TextFields" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Apellido : "
    android:textColor="@color/black"
    android:padding="5dp"
    android:layout_marginTop="15dp"
    android:textSize="15dp"
    />
<EditText
    android:id="@+id/aapellido"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:autofillHints=""
    android:ems="10"
    android:hint="Ingrese su apellido"
    android:minHeight="48dp"
    android:padding="13dp"
    android:textColorHint="#757575" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Departamento : "
    android:textColor="@color/black"
    android:padding="5dp"
    android:layout_marginTop="15dp"
    android:textSize="15dp"
    />
<Spinner
    android:id="@+id/adepto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="48dp"
    android:padding="13dp"
    />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Municipio : "
    android:textColor="@color/black"
    android:padding="5dp"
    android:layout_marginTop="15dp"
    android:textSize="15dp"
    />
<Spinner
    android:id="@+id/amunicipio"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:autofillHints=""
    android:ems="10"
    android:hint="Ingrese su apellido"
    android:minHeight="48dp"
    android:padding="13dp"
    android:textColorHint="#757575" />

<Button
    android:id="@+id/btConsultardp"
    android:onClick="consultardp"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_width="150dp"
    android:layout_gravity="center_horizontal"
    android:textColor="@color/white"
    android:background="@color/azulcaja"
    android:text="Consultar" />

<Button
    android:id="@+id/btLimpiardp"
    android:onClick="limpiarcdp"
    android:layout_width="150dp"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:textColor="@color/white"
    android:background="@color/azulcaja"
    android:text="Limpiar"/>
</LinearLayout>
</ScrollView>