<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/caja"
tools:context=".datosPerfil.DatosPerActualizarActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    >
<TextView
    android:id="@+id/textTitulo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:gravity="center"
    android:text="ACTUALIZAR DATOS DEL PERFIL"
    android:textColor="@color/black"
    android:textSize="17dp"
    app:layout_constraintTop_toTopOf="parent"
    tools:layout_editor_absoluteX="0dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id : "
        android:textColor="@color/black"
        android:padding="5dp"
        android:layout_marginTop="15dp"
        android:textSize="15dp"
        />
    <EditText
        android:id="@+id/idperfila"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="13dp"
         />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Nombre : "
    android:textColor="@color/black"
    android:padding="5dp"
    android:layout_marginTop="15dp"
    android:textSize="15dp"
    />
<EditText
    android:id="@+id/nombrea"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="48dp"
    android:padding="15dp"
     />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Apellido : "
    android:textColor="@color/black"
    android:padding="5dp"
    android:layout_marginTop="15dp"
    android:textSize="15dp"
    />
<EditText
    android:id="@+id/apellidoa"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="48dp"
    android:padding="13dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DUI : "
        android:textColor="@color/black"
        android:padding="5dp"
        android:layout_marginTop="15dp"
        android:textSize="15dp"
        />
    <EditText
        android:id="@+id/duia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:minHeight="48dp"
        android:padding="15dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NIT : "
        android:textColor="@color/black"
        android:padding="5dp"
        android:layout_marginTop="15dp"
        android:textSize="15dp"
        />
    <EditText
        android:id="@+id/nita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="15dp" />

<Button
    android:id="@+id/btActualizardp"
    android:onClick="actualizardp"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_width="150dp"
    android:layout_gravity="center_horizontal"
    android:textColor="@color/white"
    android:background="@color/azulcaja"
    android:text="Actualizar" />

<Button
    android:id="@+id/btLogin"
    android:onClick="limpiarT"
    android:layout_width="150dp"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:textColor="@color/white"
    android:background="@color/azulcaja"
    android:text="Limpiar"/>
</LinearLayout>
</ScrollView>